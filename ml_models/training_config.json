{
  "model_config": {
    "model_name": "microsoft/codebert-base",
    "max_length": 512,
    "num_classes": 5
  },
  "training_params": {
    "learning_rate": 2e-5,
    "batch_size": 16,
    "epochs": 10,
    "warmup_steps": 100,
    "weight_decay": 0.01,
    "gradient_accumulation_steps": 4
  },
  "data_config": {
    "train_split": 0.8,
    "validation_split": 0.1,
    "test_split": 0.1,
    "random_seed": 42,
    "shuffle": true
  },
  "optimization": {
    "optimizer": "AdamW",
    "scheduler": "linear",
    "early_stopping_patience": 3,
    "early_stopping_min_delta": 0.001
  },
  "model_architecture": {
    "hidden_dropout_prob": 0.1,
    "attention_probs_dropout_prob": 0.1,
    "classifier_dropout": 0.1,
    "use_pooler": true
  },
  "loss_weights": {
    "classification_weight": 0.7,
    "regression_weight": 0.3
  },
  "evaluation": {
    "metrics": ["accuracy", "precision", "recall", "f1", "mae"],
    "evaluation_frequency": 1,
    "save_best_model": true
  },
  "augmentation": {
    "enabled": true,
    "techniques": [
      "variable_renaming",
      "comment_variations",
      "whitespace_variations",
      "syntax_variations"
    ],
    "augmentation_factor": 2.0
  },
  "logging": {
    "log_level": "INFO",
    "log_interval": 100,
    "tensorboard_logging": true,
    "wandb_logging": false
  },
  "hardware": {
    "use_mixed_precision": true,
    "gradient_checkpointing": false,
    "num_workers": 4
  }
}
